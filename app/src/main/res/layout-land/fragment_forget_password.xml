<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@mipmap/backimage"
    tools:context=".Views.Fragment.ForgetPasswordFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_logo"
        android:layout_marginTop="@dimen/dp_40"
        android:id="@+id/logo_register"
        />
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/sp_20"
        android:text="@string/forget_pass"
        android:layout_below="@id/logo_register"
        android:layout_centerHorizontal="true"
        android:id="@+id/textv_forget_pass"
        />
    <EditText
        android:textColorHint="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="@string/mobile_phone"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textv_forget_pass"
        android:inputType="number"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/black"
        android:id="@+id/forget_password_telephone_number"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/forgetpass_btnsend"
        android:text="@string/send"
        android:textSize="@dimen/sp_20"
        android:layout_below="@id/forget_password_telephone_number"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/darkgreen"/>
</RelativeLayout>