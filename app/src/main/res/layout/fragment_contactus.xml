<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/contact_scrool"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/contact_ivlogo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:layout_margin="@dimen/dp_20"
                android:src="@drawable/ic_logo" />

            <LinearLayout
                android:id="@+id/contact_lincall"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_below="@id/contact_ivlogo"
                android:layout_margin="@dimen/dp_5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/contact_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:clickable="true"
                    android:src="@drawable/ic_call_black_24dp" />

                <TextView
                    android:id="@+id/contact_phonenu"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center"
                     />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/contact_linsend"
                android:layout_width="match_parent"

                android:layout_height="@dimen/dp_40"
                android:layout_below="@id/contact_lincall"
                android:layout_margin="@dimen/dp_5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/contact_send"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"

                    android:layout_gravity="start"

                    android:clickable="true"
                    android:src="@drawable/ic_email_black_24dp" />

                <TextView
                    android:id="@+id/contact_email"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center"
                    android:layout_weight="2"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/contact_relbuttons"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal"
                android:layout_below="@id/contact_linsend">

                <ImageView
                    android:layout_weight="1"

                    android:id="@+id/contact_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"

                    android:clickable="true"
                    android:src="@drawable/facebook" />

                <ImageView
                    android:layout_weight="1"

                    android:layout_marginStart="@dimen/dp_10"
                    android:id="@+id/contact_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:clickable="true"
                    android:src="@drawable/twitter" />

                <ImageView
                    android:layout_weight="1"

                    android:layout_marginStart="@dimen/dp_10"

                    android:id="@+id/contact_youtube"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:clickable="true"
                    android:src="@drawable/youtube" />

                <ImageView
                    android:layout_weight="1"

                    android:id="@+id/contact_instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/dp_10"
                    android:clickable="true"
                    android:src="@drawable/instagram" />
                <ImageView

                    android:id="@+id/contact_whatsup"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/dp_10"
                    android:clickable="true"
                    android:layout_weight="1"

                    android:src="@drawable/whatsup" />
                <ImageView
                    android:id="@+id/contact_googleplus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/dp_10"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:src="@drawable/googleplus" />


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:text="@string/contact_us"
                android:layout_below="@id/contact_relbuttons"
                android:gravity="center"
                android:background="@color/darkblue"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/black"
                android:layout_margin="@dimen/dp_10"
                android:id="@+id/contact_contacttv"/>
            <EditText
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:hint="@string/name"
                android:id="@+id/contaact_edname"
                android:layout_below="@id/contact_contacttv"
                android:layout_margin="@dimen/dp_5"/>
            <EditText
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:hint="@string/email"
                android:id="@+id/contaact_edemail"
                android:layout_below="@id/contaact_edname"
                android:layout_margin="@dimen/dp_5"/>
            <EditText
                android:inputType="phone"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:hint="@string/mobile_phone"
                android:id="@+id/contaact_edphone"
                android:layout_below="@id/contaact_edemail"
                android:layout_margin="@dimen/dp_5"/>
            <EditText
                android:inputType="text"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:hint="@string/message_address"
                android:id="@+id/contaact_edaddress"
                android:layout_below="@id/contaact_edphone"
                android:layout_margin="@dimen/dp_10"/>
            <EditText
                android:inputType="text"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/message"
                android:gravity="start"
                android:id="@+id/contaact_edmessage"
                android:layout_below="@id/contaact_edaddress"
                android:layout_margin="@dimen/dp_5"/>




        </RelativeLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_20"
        android:text="@string/send"
        android:layout_alignParentBottom="true"
        android:id="@+id/contact_btnsend"
        android:background="@color/darkblue"/>



</RelativeLayout>