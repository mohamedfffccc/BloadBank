<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Fragment.ArticlesFragment">
    <LinearLayout
        android:background="@drawable/edittext_background"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal"
        android:id="@+id/art_filter">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/ic_search_black_24dp"
            android:id="@+id/articlefragment_btnsearch"

            />
        <EditText

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_background"
            android:id="@+id/articlefragment_search"
            android:layout_weight="1"



            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/articlefragment_category"
android:layout_weight="1"
            android:gravity="start"

            />


    </LinearLayout>


    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:id="@+id/articles_list"
        android:layout_below="@+id/art_filter"

        ></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>